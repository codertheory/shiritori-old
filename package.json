{
  "name": "shiritori",
  "version": "1.0.0",
  "scripts": {
    "predev": "docker-compose up -d",
    "dev": "blitz dev",
    "build": "blitz build",
    "start": "blitz start",
    "start:production": "blitz start --port $PORT",
    "studio": "blitz prisma studio",
    "cy:open": "cypress open",
    "cy:run": "cypress run",
    "lint": "eslint --ignore-path .gitignore --ext .js,.ts,.tsx .",
    "test": "prisma generate && blitz codegen && yarn test:jest && yarn test:e2e",
    "test:server": "cross-env NODE_ENV=test blitz prisma migrate deploy && blitz build && cross-env NODE_ENV=test blitz start -p 3099",
    "test:e2e": "cross-env NODE_ENV=test start-server-and-test test:server http://localhost:3099 cy:run",
    "test:jest": "jest --ci --reporters=default --reporters=jest-junit",
    "test:watch": "jest --watch",
    "prepare": "husky install"
  },
  "prisma": {
    "schema": "db/schema.prisma"
  },
  "prettier": {
    "semi": false,
    "printWidth": 100
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix"
    ]
  },
  "dependencies": {
    "@chakra-ui/icons": "^1.0.14",
    "@chakra-ui/react": "1.6.5",
    "@emotion/react": "11.4.0",
    "@emotion/styled": "11.3.0",
    "@harelpls/use-pusher": "7.2.1",
    "@hookform/resolvers": "2.6.1",
    "@prisma/client": "2.30.0",
    "animated-number-react": "0.1.2",
    "babel-plugin-inline-react-svg": "2.0.1",
    "babel-plugin-module-resolver": "4.1.0",
    "blitz": "0.40.0-canary.5",
    "framer-motion": "4.1.17",
    "fs": "0.0.1-security",
    "install": "0.13.0",
    "pusher": "5.0.0",
    "pusher-js": "7.0.3",
    "react": "alpha",
    "react-beforeunload": "^2.5.1",
    "react-countdown-circle-timer": "^2.5.3",
    "react-dom": "alpha",
    "react-hook-form": "7.12.0",
    "react-icons": "^4.2.0",
    "react-spinners": "^0.11.0",
    "react-typed": "1.2.0",
    "rollbar": "2.24.0",
    "typo-js-ts": "^2.0.4",
    "zod": "3.5.1"
  },
  "devDependencies": {
    "@cypress/react": "5.9.1",
    "@testing-library/user-event": "^13.2.1",
    "@types/preview-email": "2.0.1",
    "@types/react": "17.0.14",
    "@types/react-beforeunload": "2.1.1",
    "cross-env": "7.0.3",
    "cypress": "8.3.0",
    "eslint": "7.30.0",
    "husky": "6.0.0",
    "jest": "27.0.6",
    "jest-junit": "12.2.0",
    "jest-mock-extended": "1.0.18",
    "jest-watch-typeahead": "0.6.4",
    "lint-staged": "10.5.4",
    "node-mocks-http": "^1.10.1",
    "prettier": "2.3.2",
    "prettier-plugin-prisma": "0.14.0",
    "pretty-quick": "3.1.1",
    "preview-email": "3.0.4",
    "prisma": "2.30.0",
    "start-server-and-test": "1.12.6",
    "typescript": "~4.3",
    "webpack": "5.45.1"
  },
  "private": true
}
